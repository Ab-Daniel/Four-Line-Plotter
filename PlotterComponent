import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Point;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.geom.Ellipse2D;
import java.awt.geom.Point2D;
import java.awt.event.MouseAdapter;

import javax.swing.JComponent;

public class PlotterComponent extends JComponent //implements MouseListener
{
	
	public void paintComponent(Graphics g)
	{
		
		super.paintComponent(g);
		Graphics2D g2 = (Graphics2D)g; //recovers Graphics2D
		
		Axes axes = new Axes(0, 400, 0, 450, 200, 200, 25, 25);
		axes.draw(g2);
		
		//listener.mouseClicked();
		
		//drawing lines
		
		if(p != null)
		{
			
			plotPoint(g2);
			
			g2.drawLine(0, 0, mousePressedY, mousePressedY);
			g2.drawLine(0, 400, mousePressedY, mousePressedY);
			g2.drawLine(450, 450, mousePressedY, mousePressedY);
			g2.drawLine(450, 0, mousePressedY, mousePressedY);
			
		}
		
		//g2.drawLine(0, 0, mousePressedY, mousePressedY);
		//g2.drawLine(0, 400, mousePressedY, mousePressedY);
		//g2.drawLine(450, 400, mousePressedY, mousePressedY);
		//g2.drawLine(450, 0, mousePressedY, mousePressedY);
	
		
		
	}
	
	public PlotterComponent()
	{
		
		class MousePressListener extends MouseAdapter //implements MouseListener
		{
			
		    public void mouseClicked(MouseEvent event)
		    {
		    	
		       mousePressedX = event.getX( );
		       mousePressedY = event.getY( );
		       p = new Point2D.Double(mousePressedX, mousePressedY);
		       repaint( );
		       
		    }
			
		}
		
		MouseListener listener = new MousePressListener();
		addMouseListener(listener);
		
	}
	
	public void plotPoint(Graphics2D g2)
	{
		
		double x = p.getX();
		double y = p.getY();
		
		Ellipse2D.Double point = new Ellipse2D.Double(x, y, 5, 5);
		
		g2.fill(point);
		
	}
	
	


	private Point2D p;
	private int mousePressedX;
	private int mousePressedY;
		
}
